<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <br />
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="Enter Title"
          type="text"
          class="form-control"
        />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control"></textarea>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input
          name="listing[image]"
          placeholder="Enter Image URL/Link"
          type="text"
          class="form-control"
        />
      </div>

      <div class="row">
        <div class="mb-3 col-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            placeholder="Example- 4999"
            class="form-control"
            type="number"
          />
        </div>

        <div class="mb-3 col-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            placeholder="Example- India"
            class="form-control"
            type="text"
          />
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          placeholder="Example- Srinagar, Jammu and Kashmir"
          class="form-control"
          type="text"
        />
      </div>

      <br />
      <!-- <button class="btn btn-dark" id="">Add</button> -->
      <button class="btn btn-dark" id="add-btn">Add</button>

      <br /><br />
    </form>
  </div>
</div>
